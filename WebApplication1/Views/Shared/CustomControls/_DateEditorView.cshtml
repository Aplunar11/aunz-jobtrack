@model JobTrack.Models.FormFieldModel

<div class="form-group">
    <label>@Model.Label</label>

    @if (Model.IsReadOnly)
    {
        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    }
    else
    {
        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker" } })
    }
</div>