<div class="input-group input-group-sm mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text">@Model.Label</span>
    </div>
    <input type="text"
           class="form-control @(!string.IsNullOrEmpty(Model.Class) ? Model.Class : "")"
           id="@Model.Name" 
           name="@Model.Name"
           placeholder="@Model.Label" 
           value="@Model.Value" 
           onchange="removeRedError(this)"
           errorid="error-text-modal"
           @(Model.IsReadOnly ? "readonly" : "") 
           @(Model.IsRequired ? "required" : "")>
</div>

<script>
    $(document).ready(function () {
        if ('@Model.IsReadOnly' == 'True') {
            $('#@Model.Name').css('background', '#FAFBFF');
        }
    });
</script>