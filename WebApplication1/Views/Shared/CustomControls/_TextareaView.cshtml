@model JobTrack.Models.FormFieldModel

<div class="form-group">
    <label>@Model.Label</label>
    <textarea class="form-control" 
              rows="3" 
              id="@Model.Name" 
              name="@Model.Name" 
              onchange="removeRedError(this)"
              errorid="error-text-modal"
              @(Model.IsReadOnly ? "readonly" : "")
              @(Model.IsRequired ? "required" : "")>@Model.Value</textarea>
</div>