            </button>
        </div>
    }

    <div class="container-fluid mt-3">
        <div class="row">
            <!-- my jobs -->
            <div class="col-lg-2 col-sm-3" style="cursor: pointer" onclick="onclickJobType('myJobs')">
                <div class="card gradient-9">
