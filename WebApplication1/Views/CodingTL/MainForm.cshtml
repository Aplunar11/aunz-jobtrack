                                    titleAttr: 'Create STP',
                                    extend: '',
                                    className: 'custom-btn fa fa-tasks',
                                    text: ' Create STP&nbsp;&nbsp;',
                                    action: function () {

                                        //get all selected ids
                                        let coversheetids = [];
                                        $(childTableCoversheet.$('input[name="' + data['JobCoversheetID'] + '_checkbox"]:checked').each(function () {
                                            coversheetids.push($(this).val());
                                        }));

                                        //console.log('coversheetids: ', coversheetids);

                                        if (coversheetids.length > 0) {
                                            let obj = {
                                                coversheetids: coversheetids.join(','),
