@*@model IEnumerable<JobTrack.Models.QueryListModel>*@
@model JobTrack.Models.QueryManuscript.ManuscriptDataModel
@{
    ViewBag.Title = "QueryManuscript";

}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bs-stepper/dist/css/bs-stepper.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" />
    <script src="https://cdn.ckeditor.com/4.15.1/standard-all/ckeditor.js"></script>
    <title>Query Manuscript</title>
    <style>
        .form-group label {
            font-weight: 800;
        }
    </style>
</head>
<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="offset-md-2 col-10">

                <!-- /.card-header -->
                <!-- /.card-header -->
                <div class="card-body">
                    <div style="margin-top: 55px"></div>

                    <form id="formQueryIndex" enctype="multipart/form-data">
                        <div class="row" style="font-size: 12px">
                            <div class="col-md">
                                <div class="form-group">
                                    <label>Job Number</label>
                                    <input type="text" class="form-control" value="@Model.JobNumberText" readonly />
                                </div>
                            </div>

                            <div class="col-md">
                                <div class="form-group">
                                    <label>Manuscript Tier</label>
                                    <input type="text" class="form-control" value="@Model.ManuscriptTier" readonly />
                                </div>
                            </div>

                            <div class="col-md">
                                <div class="form-group">
                                    <label>Product ID</label>
                                    <input type="text" class="form-control" value="@Model.BPSProductID" readonly />
                                </div>
                            </div>

                            <div class="col-md">
                                <div class="form-group">
                                    <label>Service Number</label>
                                    <input type="text" class="form-control" value="@Model.ServiceNumber" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="row" style="font-size: 12px">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Manuscript or Leg Title</label>
                                    <input type="text" class="form-control" value="@Model.ManuscriptLegTitle" readonly />
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Task Number</label>
                                    <input type="text" class="form-control" value="@(string.IsNullOrEmpty(Model.PETaskNumber) ? "TBD" : Model.PETaskNumber)" readonly />
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Topic title</label>
                                    <select class="form-control" name="QueryTopicID" id="QueryTopicID" required>
                                        <option value="1">Topic 1</option>
                                        <option value="2">Topic 2</option>
                                        <option value="3">Topic 3</option>
                                        <option value="4">Topic 4</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Query type</label>
                                    <select class="form-control" name="QueryTypeID" id="QueryTypeID" required>
                                        <option value="1">General</option>
                                        <option value="2">XML Tagging</option>
                                        <option value="3">Format</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="font-size: 12px; padding-bottom: 0; margin-bottom: 0">
                            <div class="col-md">
                                <div class="form-group" style="margin-bottom: 0">
                                    <label>Query Details</label>
                                    <div>
                                        <textarea rows="3" name="Message" style="padding: 5px; width: 100%; border: 1px solid #ccc" id="message"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2" style="font-size: 12px">
                            <div class="col-md">
                                <input type="file" class="form-control" style="font-size: 12px" name="FileToUpload" id="FileToUpload" />
                            </div>
                        </div>

                        <!-- hidden -->
                        <input type="hidden" name="JobID" value="@ViewBag.ManuscriptID" />
                        <input type="hidden" name="QueryStatusID" value="1" />
                    </form>

                    <!-- add new -->
                    <button type="button" class="btn btn-primary" onclick="onclickAdd()">
                        <i class='fa fa-plus-square'></i> &nbsp;
                        Add New
                    </button>

                    <select class="form-control" style="float: right; width: 200px" onchange="onchangeFilter()" id="filterDropdown">
                        <option value="0">All</option>
                        <option value="1">Open</option>
                        <option value="2">Cancelled</option>
                        <option value="3">Closed</option>
                        <option value="4">Replied by Client</option>
                        <option value="5">Replied by Straive</option>
                    </select>

                    <!-- query table -->
                    <table class="table table-bordered table-striped" id="queryTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Job ID</th>
                                <th>Task ID</th>
                                <th>Query Status</th>
                                <th>Topic Title</th>
                                <th>Query Type</th>
                                <th>Date Posted</th>
                                <th>Closed Date</th>
                                <th>Replied By</th>
                                <th>Posted By</th>
                                <th style="width: 145px !important">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.card-body -->
                <!-- /.card-body -->


                @switch ((JobTrack.Models.Enums.UserAccessEnum)ViewBag.UserAccess)
                {
                    case JobTrack.Models.Enums.UserAccessEnum.Admin:
                        <button type="button" class="btn btn-link" onclick="location.href='/Admin/AllJob'">< Go Back</button>
                        break;

                    case JobTrack.Models.Enums.UserAccessEnum.Client_LE:
                        <button type="button" class="btn btn-link" onclick="location.href='/LE/MainForm'">< Go Back</button>
                        break;

                    case JobTrack.Models.Enums.UserAccessEnum.Straive_PE:
                        <button type="button" class="btn btn-link" onclick="location.href='/PE/MainForm'">< Go Back</button>
                        break;
                }
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    
    <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

<!-- /.content -->
</html>

<div id="query-modal-container">
    <!-- modal edit form -->
</div>

<script>
    $(document).ready(function () {
        getTableData('queryTable');
    });

    function getTableData(tableId) {
        $('#' + tableId).DataTable({
            lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
            searching: true,
            responsive: true,
            //serverSide: true,
            autoWidth: false,
            paging: true,
            bFilter: true,
            bSort: true,
            bPaginate: true,
            dom: 'Bfrtip',
            buttons: ['copy', 'csv', 'excel', 'pdf', 'print'],

            ajax: {
                url: '/QueryManuscript/GetQueryManuscript',
                type: 'POST',
                dataType: 'json',
                data: function (d) {
                    d.jobId = @ViewBag.ManuscriptID;
                    d.filterBy = $('#filterDropdown').val();
                },
                dataSrc: function (data) {
                    return data.Collection;
                }
            },
            order: [[0, 'asc']],
            columns: [
                { data: 'ID' },
                { data: 'JobID' },
                { data: 'TaskID' },
                { data: 'QueryStatus' },
                { data: 'QueryTopicTitle' },
                { data: 'QueryType' },
                { data: 'DateText' },
                { data: 'ClosedDateText' },
                { data: 'RepliedBy' },
                { data: 'PostedBy' },
                { data: 'ID' }
            ],
            columnDefs: [
                {
                    targets: [2],
                    render: function (data, type, row, meta) {
                            return data == null ? 'TBD' : data;
                    }
                },
                {
                    targets: [4],
                    render: function (data, type, row, meta) {

                        // if status is not open, add color code
                        if (data != 'Open') {

                            let color = data == 'Cancelled' ? 'orange' : 'green';
                            return '<div style="padding: 6px; background-color: ' + color + '; color: white; width: 100px; border-radius: 5px; font-weight: 600">' + data + '</div>';
                        }
                        else
                            return data;
                    }
                },
                {
                    targets: [8],
                    render: function (data, type, row, meta) {

                        // if repliedBy is not admin, add color code
                        if (data != 'admin') {

                            let color = data == 'LE' ? 'orange' : 'green';
                            return '<div style="padding: 6px; background-color: ' + color + '; color: white; border-radius: 5px; font-weight: 600">' + data + '</div>';
                        }
                        else
                            return data;
                    }
                },
                {
                    targets: [10],
                    render: function (data, type, row, meta) {
                        return ''
                            // + '<button type="button" class="btn btn-info" onclick="onclickUpdate(' + data + ')">Update</button> &nbsp;'
                            + '<button type="button" class="btn btn-info" onclick="onclickView(' + data + ')">View</button> &nbsp;'
                            // + '<button type="button" class="btn btn-danger" onclick="onclickDelete(' + data + ')">Delete</button> &nbsp;'
                            + '<button type="button" class="btn btn-success" onclick="onclickReply(' + data + ')">Reply</button>';
                    }
                }
            ]
        });
    }

    function onclickAdd() {
        let isAdd = confirm("Are you sure you want to Post this Query?");
        if (isAdd) {
            if ($('#message').val() == '') {
                alert('WARNING! Query details field is required.');
                return;
            }

            // append file input
            let formDataToSubmit = new FormData();
            formDataToSubmit.append("FileToUpload", $("#FileToUpload")[0].files[0]);

            // append other input data
            let formData = $('#formQueryIndex').serializeArray();
            $(formData).each(function (index, obj) {
                formDataToSubmit.append(obj.name, obj.value);
            });

            // process data to api
            $.ajax({
                type: 'POST',
                url: '/QueryManuscript/UpdateQueryManuscript',
                data: formDataToSubmit,
                dataType: 'json',
                contentType: false,
                processData: false,
                success: function (response) {

                    if (response.IsSuccess) {
                        alert('Successfully added.');
                        window.location.reload();
                    }
                    else
                        alert('Error update.');
                }
            });
        }
    }

    function onclickView(rowID) {
        location.href = '/QueryManuscript/Reply?id=' + @Model.ManuscriptID + '&queryid=' + rowID + '&v=' + true + "&u=" + @((int)ViewBag.UserAccess);
    }

    function onclickUpdate(rowID) {
        $.ajax({
            type: 'POST',
            url: '/QueryManuscript/_EditQueryManuscript',
            data: { ID: rowID, JobID: @ViewBag.ManuscriptID  },
            dataType: 'html',
            success: function (response) {
                $('#query-modal-container').html(response);
                $('#queryModal').modal('show');
            }
        });
    }

    function onclickDelete(rowID) {
        let isDelete = confirm('Are you sure you want to delete?');

        if (isDelete) {
            $.ajax({
                type: 'POST',
                url: '/QueryManuscript/DeleteQueryManuscript',
                data: { ID: rowID },
                dataType: 'json',
                success: function (response) {

                    if (response.success)
                        location.reload();
                    else
                        alert("Delete error.");
                }
            })
        };
    }

    function onclickReply(rowID) {
        location.href = '/QueryManuscript/Reply?id=' + @Model.ManuscriptID + '&queryid=' + rowID + '&v=' + false + "&u=" + @((int)ViewBag.UserAccess);
    }

    function onchangeFilter() {
        $('#queryTable').DataTable().ajax.reload();
    }
</script>