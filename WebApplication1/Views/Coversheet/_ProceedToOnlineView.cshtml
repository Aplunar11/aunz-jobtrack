@model JobTrack.Models.FormFieldModel

<div class="modal fade" id="modal-proceedonline" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#009688;color:white">
                <h6 class="modal-title" id="confirmModalLabel">Coding Workbench</h6>
                <button type="button" class="close modal-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="alert alert-danger fade show" id="ErrorMessage2">
                    <span>Required fields are missing.</span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <form id="formProceedOnline">
                    <div class="row">
                        <div class="col-md">
                            @Html.Partial("CustomControls/_TextAreaView", new JobTrack.Models.FormFieldModel { Label = "Proceed to Online", Name = "InputProceedOnline", Value = Model.Value, Rows = 5, IsRequired = true })
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="onclickSubmitSubsequent();" id="btnOk">Ok</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        setupDefaultForm();
    });

    function onclickSubmitSubsequent() {
        let isValid = validateForm('formProceedOnline');
        if (isValid) {
            $('#ProceedToOnline').val($('#InputProceedOnline').val());
            $('#modal-proceedonline').modal('hide');
        }
    }
</script>