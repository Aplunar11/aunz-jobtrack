            $('[id*=chkEmailList]').prop('checked', isEmailList === '1')
            $('[id*=chkMandatory]').prop('checked', isMandatoryRecepient === '1')
            $('[id*=chkShowUser]').prop('checked', isShowUser === '1')
            $('#myModal').modal("show");
