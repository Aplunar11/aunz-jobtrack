@model  JobTrack.Models.QueryManuscript.ReplyModel
@{
    ViewBag.Title = "Reply";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bs-stepper/dist/css/bs-stepper.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" />
    <link href="~/temp/chatbox.css" rel="stylesheet" />
    <script src="https://cdn.ckeditor.com/4.15.1/standard-all/ckeditor.js"></script>
    <title>Query STP</title>
</head>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="offset-md-2 col-10">

                <div class="card-body">
                    <form id="formReply">

                        <div class="row mb-2" style="margin-top: 60px">
                            <div class="col-md-4">
                                <label><b>Topic title: </b></label> &nbsp;
                                <label>@Model.STPTopicTitle</label>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-4">
                                <label><b>Query Type: </b></label> &nbsp;
                                <label>@Model.STPType</label>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md">

                                <div class="row">
                                    <div class="col-md">

                                        <label><b>STP Status: </b></label> &nbsp;
                                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                            <label class="btn btn-outline-secondary" style="width: 100px; border-radius: 0" hidden id="label-open">
                                                <input type="radio" name="STPStatusID" value="1" /> Open
                                            </label>

                                            <label class="btn btn-outline-danger" style="width: 100px" onclick="onclickStatus('cancel')">
                                                <input type="radio" name="STPStatusID" value="2" id="input-cancel" /> Cancel
                                            </label>

                                            <label class="btn btn-outline-success" style="width: 100px; border-radius: 0" onclick="onclickStatus('close')">
                                                <input type="radio" name="STPStatusID" value="3" id="input-close" /> Close
                                            </label>
                                        </div>

                                        @if (!(bool)ViewBag.IsViewOnly)
                                        {
                                            <button type="button" class="btn btn-primary" style="width: 100px" onclick="openComment();">Replied</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (!(bool)ViewBag.IsViewOnly)
                        {
                            @Html.Partial("CustomControls/_CommentPopupView", new JobTrack.Models.CommentModel { IsViewOnly = (bool)ViewBag.IsViewOnly })
                        }

                        <input type="hidden" name="QueryID" value="@Model.QueryID" />
                    </form>

                    @if (Model.Replies.Count > 0)
                    {
                        <div class="row">
                            <div class="col-md">
                                <div style="padding: 5px; background-color: green; color: white; text-align: center">POST</div>
                            </div>
                        </div>
                    }

                    <div class="chat-container">
                        @foreach (var reply in Model.Replies)
                        {
                            { Html.RenderPartial("_ReplyBox", reply); }
                        }
                    </div>

                    <div class="mb-3"></div>
                    <button type="button" class="btn btn-link" onclick="location.href='/QuerySTP/Index?id=@Model.StpID&u=@((int)ViewBag.UserAccess)'">< Go Back</button>
                </div>
            </div>
        </div>
    </div>
</section>
</html>

<script>
    $(document).ready(function () {
        // set value
        $(':radio[name="STPStatusID"][value="@(Model.STPStatusID > 0 ? Model.STPStatusID : 1)"]').attr('checked', 'checked').parent().addClass('active');

        // set active status
        if (@Model.STPStatusID > 1) {
            $("input[name='STPStatusID']:checked").parent().addClass('active').removeAttr('hidden');
        }
        else
            $("input[name='STPStatusID']:checked").parent().addClass('active');

        // if it's view only mode, hide unselected status
        if ('@ViewBag.IsViewOnly' == 'True') {
            $("input[name='STPStatusID']").parent().attr('hidden', true);
            $("input[name='STPStatusID']:checked").parent().addClass('active').removeAttr('hidden');
        }
    });

    function onclickSubmit() {
        // serialize form data
        let formData = $('#formReply').serializeArray();
        let datasource = {};
        $(formData).each(function (index, obj) {
            datasource[obj.name] = obj.value;
        });

        // process data to api
        $.ajax({
            type: 'POST',
            url: '/QuerySTP/UpdateReply',
            data: datasource,
            dataType: 'json',
            success: function (response) {

                if (response.success)
                    window.location.reload();
                else
                    alert('Error update.');
            }
        });
    }

    function onclickStatus(status) {
        let isOk = confirm("Are you sure you want to change status?");
        if (!isOk) {
            $('#input-' + status + ":checked").attr('checked', false);
            $('#input-' + status + ":checked").parent().removeClass('active');
        }
    }

    function openComment() {
        $('#modal-comment').modal('show');
    }
</script>